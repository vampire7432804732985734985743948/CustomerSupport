@model List<CustomerSupport.Models.ContactSupportRequestModel>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Support Requests</h2>

<div class="text-center">

@foreach (var item in Model)
{
    <div style="border:1px solid #ccc; padding:10px; margin:10px;">
        <a href="@Url.Action("Reply", "DataOperation", new { id = item.Id })">
            <p><strong>ID:</strong> @item.Id</p>
            <p><strong>Email:</strong> @item.UserEmailAddress</p>
            <p><strong>Title:</strong> @item.RequestTitle</p>
            <p><strong>Description:</strong> @item.RequestDescription</p>
            <p><strong>Category:</strong> @item.Category</p>
        </a>
    </div>
}
</div>
